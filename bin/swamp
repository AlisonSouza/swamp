#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)
require 'swamp'

fields = Swamp::Fields.new
buttons = Swamp::Buttons.new
wrapper = Swamp::Wrapper.new(fields, buttons)
swamp = Swamp::Interface.new(STDOUT, wrapper)
swamp.run

while input = gets.chomp
  if input == 'exit'
    exit
  end
  swamp.scan(input)
end

